{
  "name": "servherd",
  "version": "1.1.0",
  "description": "CLI tool and MCP server for managing development servers across projects",
  "author": "Adam Powers <apowers@ato.ms>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apowers313/servherd.git"
  },
  "bugs": {
    "url": "https://github.com/apowers313/servherd/issues"
  },
  "homepage": "https://github.com/apowers313/servherd#readme",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "keywords": [
    "server-manager",
    "development-server",
    "pm2",
    "mcp",
    "cli",
    "devtools",
    "process-manager",
    "port-management",
    "storybook",
    "vite",
    "llm",
    "ai-tools"
  ],
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "servherd": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "docs",
    "examples",
    "README.md",
    "CONTRIBUTING.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "node scripts/add-shebang.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run lint && npm run build && npm run test",
    "server:dummy2": "node scripts/dummy-server.js",
    "prepare": "husky",
    "knip": "knip",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "cosmiconfig": "^9.0.0",
    "detect-port": "^2.1.0",
    "flexi-human-hash": "^1.0.1",
    "fs-extra": "^11.3.3",
    "handlebars": "^4.7.8",
    "micromatch": "^4.0.8",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "pm2": "^6.0.14",
    "ps-tree": "^1.2.0",
    "proper-lockfile": "^4.1.2",
    "yaml": "^2.8.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@commitlint/lint": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^13.1.0",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "^4.0.40",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^22.10.5",
    "@types/proper-lockfile": "^4.1.4",
    "@types/ps-tree": "^1.1.6",
    "@vitest/coverage-v8": "^2.1.8",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.17.0",
    "execa": "^9.5.2",
    "husky": "^9.1.7",
    "knip": "^5.80.2",
    "pupt": "^1.3.2",
    "semantic-release": "^25.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2.1.8"
  }
}
